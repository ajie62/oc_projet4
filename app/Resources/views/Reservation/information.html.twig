{% extends "base.html.twig" %}

{% block title %}Vos informations{% endblock %}

{% block body %}
    <div class="container main-container">
        {% include "Reservation/inc/title.html.twig" %}

        {% for message in app.session.flashbag.get('notice') %}
            <p class="alert alert-success notification">{{ message }}</p>
        {% endfor %}

        <div id="reservation">
            <div class="row">
                <div class="col-xs-12 col-sm-3">
                    {% include "Reservation/inc/prices.html.twig" %}
                </div>

                <div class="col-xs-12 col-sm-6">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <p class="text-right">
                        <button type="submit" class="btn btn-default go-back"><span class="glyphicon glyphicon-arrow-left"></span> Retour</button>
                        <button type="submit" class="btn btn-success">Continuer <span class="glyphicon glyphicon-arrow-right"></span></button>
                    </p>
                    {{ form_end(form) }}
                </div>

                <div class="col-xs-12 col-sm-3">
                    <div class="summary well">
                        <h4>Votre réservation</h4>
                        <strong>Date de votre réservation : </strong> {{ app.session.get('booking').date|date('d/m/Y') }}
                        <br>
                        <strong>Type de billet choisi : </strong> {{ app.session.get('booking').type }}<br>
                        <strong>Nombre de billets : </strong> {{ app.session.get('booking').ticketsNumber }}<br><br>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}